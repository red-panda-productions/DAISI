      <attnum name="width" val="80"/>
      <attstr name="h align" val="right"/>
      <attstr name="font" val="medium"/>
    </section>

    <section name="topspeedprogress">
      <attstr name="type" val="progress bar"/>
      <attnum name="x" val="440"/>
      <attnum name="y" val="200"/>
      <attnum name="width" val="180"/>
      <attnum name="height" val="20"/>
      <attnum name="min" val="0"/>
      <attnum name="max" val="100"/>
      <attnum name="value" val="85"/>
    </section>

    <section name="accelerationprogress">
      <attstr name="type" val="progress bar"/>
