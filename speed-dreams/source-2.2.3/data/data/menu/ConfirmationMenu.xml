<?xml version="1.0" encoding="utf-8"?>


<!DOCTYPE params SYSTEM "../tgf/params.dtd">

<params name="confirmationmenu">

    <section name="dynamic controls">

        <section name="imsure">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Delete the experiment file"/>
            <attstr name="tip" val="delete the experiment data. WARNING: THIS CANNOT BE UNDONE!"/>
            <attnum name="x" val="50"/>
            <attnum name="y" val="330"/>
            <attnum name="width" val="320"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="big"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-70"/>
            <attnum name="image y" val="-15"/>
            <attnum name="image width" val="530"/>
            <attnum name="image height" val="70"/>
            <attstr name="focused image" val="data/img/bg-button-three_focused.png"/>
            <attstr name="enabled image" val="data/img/bg-button-three.png"/>
            <attstr name="pushed image" val="data/img/bg-button-three_pushed.png"/>
        </section>

        <section name="waitdontdelete">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Wait, don't delete the data"/>
            <attstr name="tip" val="return to the previous screen"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="50"/>
            <attnum name="y" val="275"/>
            <attnum name="width" val="320"/>
            <attstr name="font" val="big"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-70"/>
            <attnum name="image y" val="-15"/>
            <attnum name="image width" val="530"/>
            <attnum name="image height" val="70"/>
            <attstr name="focused image" val="data/img/bg-button-three_focused.png"/>
            <attstr name="enabled image" val="data/img/bg-button-three.png"/>
            <attstr name="pushed image" val="data/img/bg-button-three_pushed.png"/>
        </section>

    </section>

    <section name="static controls">

        <section name="1">
            <attstr name="type" val="static image"/>
            <attnum name="x" val="-10"/>
            <attnum name="y" val="305"/>
            <attnum name="width" val="195"/>
            <attnum name="height" val="130"/>
            <attstr name="image" val="data/img/sd-logo-big.png"/>
        </section>

        <section name="2">
            <attstr name="type" val="background image"/>
            <attstr name="image" val="data/img/main-menu-2.png"/>
        </section>

        <section name="3">
            <attstr name="type" val="label"/>
            <attnum name="x" val="50"/>
            <attnum name="y" val="410"/>
            <attstr name="text" val="Delete the data?"/>
            <attnum name="width" val="1000"/>
            <attnum name="height" val="100"/>
            <attstr name="font" val="big"/>
        </section>

        <section name="4">
            <attstr name="type" val="static image"/>
            <attnum name="x" val="-20"/>
            <attnum name="y" val="400"/>
            <attnum name="width" val="1080"/>
            <attnum name="height" val="30"/>
            <attstr name="image" val="data/img/head.png"/>
        </section>

    </section>

</params>
