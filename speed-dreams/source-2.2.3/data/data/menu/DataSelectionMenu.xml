<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE params SYSTEM "../tgf/params.dtd">

<params name="DataSelectionMenu">

    <section name="dynamic controls">

        <section name="CheckboxEnvironmentData">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Environment data"/>
            <attstr name="tip" val="Save the settings from the chosen environment"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="275"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="medium"/>
            <attstr name="checked" val="yes"/>
        </section>

        <section name="CheckboxCarData">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Car data"/>
            <attstr name="tip"
                    val="Save the position, rotation, speed, acceleration, and gear of the car for each time step"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="250"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="medium"/>
            <attstr name="checked" val="yes"/>
        </section>

        <section name="CheckboxUserData">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Human user data"/>
            <attstr name="tip"
                    val="Save the steer, brake, acceleration, and clutch action from the user for each time step"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="225"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="medium"/>
            <attstr name="checked" val="yes"/>
        </section>

        <section name="CheckboxInterventionData">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Intervention data"/>
            <attstr name="tip"
                    val="Save the steer, brake, acceleration, and clutch action from the decision maker for each time step"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="200"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="medium"/>
            <attstr name="checked" val="yes"/>
        </section>

        <section name="CheckboxMetaData">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Internal meta data"/>
            <attstr name="tip" val="Save the settings from the chosen decision maker"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="175"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="medium"/>
            <attstr name="checked" val="yes"/>
        </section>

        <section name="DatabaseButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Database settings"/>
            <attstr name="h align" val="left"/>
            <attstr name="tip" val="The database connection settings"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="300"/>
            <attnum name="width" val="320"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>	
            <attnum name="image width" val="320"/>
            <attnum name="image height" val="50"/>
            <attnum name="image x" val="-60"/>
            <attnum name="image y" val="-10"/>
            <attstr name="focused image" val="data/img/bg-button-big-focused.png"/>
            <attstr name="enabled image" val="data/img/bg-button-big.png"/>
            <attstr name="pushed image" val="data/img/bg-button-big-pushed.png"/>
        </section>

        <section name="DatabaseStatusLabel">
            <attstr name="type" val="label"/>
            <attnum name="x" val="162"/>
            <attnum name="y" val="305"/>
            <attstr name="text" val="Unknown      "/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>

        <!-- Button for going to the developer screen -->
        <section name="CompButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Advanced Settings"/>
            <attstr name="tip" val="Access the the data compression settings"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="140"/>
            <attnum name="width" val="120"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-10"/>
            <attnum name="image y" val="4"/>
            <attnum name="image width" val="60"/>
            <attnum name="image height" val="16"/>
            <attstr name="focused image" val="data/img/button-left-focused.png"/>
            <attstr name="enabled image" val="data/img/button-left.png"/>
            <attstr name="pushed image" val="data/img/button-left-pushed.png"/>
        </section>

        <section name="BackButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Back"/>
            <attstr name="tip" val="Go back to previous screen"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="40"/>
            <attnum name="y" val="41"/>
            <attnum name="width" val="130"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-10"/>
            <attnum name="image y" val="4"/>
            <attnum name="image width" val="60"/>
            <attnum name="image height" val="16"/>
            <attstr name="focused image" val="data/img/button-left-focused.png"/>
            <attstr name="enabled image" val="data/img/button-left.png"/>
            <attstr name="pushed image" val="data/img/button-left-pushed.png"/>
        </section>

        <section name="ApplyButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Apply"/>
            <attstr name="tip" val="Accept and save changes"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="550"/>
            <attnum name="y" val="41"/>
            <attnum name="width" val="120"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-10"/>
            <attnum name="image y" val="4"/>
            <attnum name="image width" val="60"/>
            <attnum name="image height" val="16"/>
            <attstr name="focused image" val="data/img/button-left-focused.png"/>
            <attstr name="enabled image" val="data/img/button-left.png"/>
            <attstr name="pushed image" val="data/img/button-left-pushed.png"/>
        </section>

    </section>

    <section name="static controls">

        <section name="1">
            <attstr name="type" val="background image"/>
            <attstr name="image" val="data/img/Main-menu-2.png"/> <!-- TODO change background -->
        </section>

        <section name="2">
            <attstr name="type" val="label"/>
            <attnum name="x" val="20"/>
            <attnum name="y" val="280"/>
            <attstr name="text" val="Data Collection:"/>
            <attstr name="h align" val="right"/>
            <attnum name="width" val="220"/>
            <attstr name="font" val="small_t"/>
        </section>

    </section>

</params>
