<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE params SYSTEM "../tgf/params.dtd">

<params name="DatabaseSettings">

    <section name="dynamic controls">
        <!-- Input field for username -->
        <section name="UsernameEdit">
            <attstr name="type" val="edit box"/>
            <attnum name="max len" val="32"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="325"/>
            <attnum name="width" val="150"/>
            <attstr name="h align" val="center"/>
            <attstr name="font" val="medium"/>
			<attstr name="text" val="Username"/>
        </section>

        <!-- Input field for password -->
        <section name="PasswordEdit">
            <attstr name="type" val="edit box"/>
            <attnum name="max len" val="32"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="275"/>
            <attnum name="width" val="150"/>
            <attstr name="h align" val="center"/>
            <attstr name="font" val="medium"/>
			<attstr name="text" val="Password"/>
        </section>
		
		<!-- Input field for IP Address -->
        <section name="AddressEdit">
            <attstr name="type" val="edit box"/>
            <attnum name="max len" val="32"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="225"/>
            <attnum name="width" val="150"/>
            <attstr name="h align" val="center"/>
            <attstr name="font" val="medium"/>
			<attstr name="text" val="Url"/>
        </section>
		
		<!-- Input field for the port -->
        <section name="PortEdit">
            <attstr name="type" val="edit box"/>
            <attnum name="max len" val="32"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="175"/>
            <attnum name="width" val="150"/>
            <attstr name="h align" val="center"/>
            <attstr name="font" val="medium"/>
			<attstr name="text" val="Port"/>
        </section>
		
		<!-- Input field for the database schema name -->
		<section name="SchemaEdit">
            <attstr name="type" val="edit box"/>
            <attnum name="max len" val="32"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="125"/>
            <attnum name="width" val="150"/>
            <attstr name="h align" val="center"/>
            <attstr name="font" val="medium"/>
			<attstr name="text" val="SchemaName"/>
        </section>
		
		<!-- Checkbox for SSL option -->
		<section name="CheckboxUseSSL">
            <attstr name="type" val="check box"/>
            <attstr name="text" val="Use SSL"/>
            <attstr name="tip" val="Enable/Disable the usage of SSL"/>
            <attnum name="x" val="425"/>
            <attnum name="y" val="325"/>
            <attnum name="image width" val="20"/>
            <attnum name="image height" val="20"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="font" val="small_t"/>
            <attstr name="checked" val="yes"/>
        </section>

        <!-- Apply button -->
        <section name="ApplyButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Apply"/>
            <attstr name="tip" val="Accept and save changes"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="435"/>
            <attnum name="y" val="40"/>
            <attnum name="width" val="120"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-10"/>
            <attnum name="image y" val="4"/>
            <attnum name="image width" val="60"/>
            <attnum name="image height" val="16"/>
            <attstr name="focused image" val="data/img/button-left-focused.png"/>
            <attstr name="enabled image" val="data/img/button-left.png"/>
            <attstr name="pushed image" val="data/img/button-left-pushed.png"/>
        </section>
		
		<!-- Back button -->
		<section name="BackButton">
            <attstr name="type" val="text button"/>
            <attstr name="show box" val="no"/>
            <attstr name="text" val="Back"/>
            <attstr name="tip" val="Go back to previous screen"/>
            <attstr name="h align" val="left"/>
            <attnum name="x" val="278"/>
            <attnum name="y" val="40"/>
            <attnum name="width" val="120"/>
            <attstr name="font" val="medium"/>
            <attstr name="color" val="0xFFFFFF"/>
            <attstr name="focused color" val="0xFFFFFF"/>
            <attstr name="pushed color" val="0xFFFFFF"/>
            <attnum name="image x" val="-10"/>
            <attnum name="image y" val="4"/>
            <attnum name="image width" val="60"/>
            <attnum name="image height" val="16"/>
            <attstr name="focused image" val="data/img/button-left-focused.png"/>
            <attstr name="enabled image" val="data/img/button-left.png"/>
            <attstr name="pushed image" val="data/img/button-left-pushed.png"/>
        </section>

    </section>

    <section name="static controls">

        <section name="1">
            <attstr name="type" val="background image"/>
            <attstr name="image" val="data/img/splash-aiconf.jpg"/>
        </section>
		
        <section name="2">
            <attstr name="type" val="label"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="350"/>
            <attstr name="text" val="Username"/>
            <attstr name="tip" val="Your username for the database server"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>

        <section name="3">
            <attstr name="type" val="label"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="300"/>
            <attstr name="text" val="Password"/>
            <attstr name="tip" val="Your password for the database server"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>
		
		<section name="4">
            <attstr name="type" val="label"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="250"/>
            <attstr name="text" val="Address"/>
            <attstr name="tip" val="The address of the database server"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>
		
		<section name="5">
            <attstr name="type" val="label"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="200"/>
            <attstr name="text" val="Port"/>
            <attstr name="tip" val="The port of the database server"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>
		
		<section name="6">
            <attstr name="type" val="label"/>
            <attnum name="x" val="250"/>
            <attnum name="y" val="150"/>
            <attstr name="text" val="Schema"/>
            <attstr name="tip" val="The schema name of the database server"/>
            <attstr name="h align" val="left"/>
            <attstr name="font" val="medium_t"/>
        </section>

    </section>

</params>
