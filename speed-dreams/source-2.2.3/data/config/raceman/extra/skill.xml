<params name="Skill" type="template" version="1.0">

 <section name="skill">

  <!-- The Skill level is a numeric value between 0 and 10.0.  Consider 
       it a handicap - the higher the value, the slower hymie's drivers
       will go.  An unexperienced driver using the keyboard should set 
       it to 10.0, whereas Michael Schumacher (now he's retired he can
       play Torcs) using a full wheel/pedal setup should set it to 0.0
       for a real challenge.                                             -->

  <!-- change below value to set skill level >>> |||             -->
  <!--                                           VVV             -->
  <attnum name="level" min="0.0" max="10.0" val="0.0"/>
  <!--                                           ^^^             -->
  <!-- change above value to set skill level >>> |||             -->

 </section>

</params>
