  <!-- The Force Feedback configurations -->
  <section name="forceFeedback">
    <section name="default">
      <section name="effectsConfig">
        <section name="globalEffect">
          <attnum name="enabled" unit="" val="1"/>
          <attnum name="multiplier" unit="" val="100"/>
          <attnum name="reverse" unit="" val="0"/>
        </section>

        <section name="autocenterEffect">
          <attnum name="enabled" unit="" val="1"/>
          <attnum name="frontwheelsmultiplier" val="7000"/>
          <attnum name="smoothing" val="100"/>
